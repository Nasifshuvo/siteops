# Server Configuration
PORT=3000
NODE_ENV=development

# Sites Directory
# Local development: defaults to ./sites (relative to project root)
# Docker/Production: set to /var/www/sites or your mounted volume path
SITES_PATH=./sites

# API Authentication
# Required for site management endpoints (/site/*)
# Generate a secure key: openssl rand -hex 32
API_KEY=your-secure-api-key-here
